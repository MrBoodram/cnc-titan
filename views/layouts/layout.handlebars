<!DOCTYPE html>
<html>
<head>
    <title>Titan</title>
    <link rel='stylesheet' href='/css/materialize.css'/>
    <link rel='stylesheet' href='/css/style.css'/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <nav class="blue-grey" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="#" class="brand-logo">Titan</a>
      <ul class="right hide-on-med-and-down">
        {{#if user}}
          <li><a href="/">Dashboard</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/users/logout">Logout</a></li>
        {{else}}
          <li><a href="/users/login">Login</a></li>
          <li><a href="/users/register">Register</a></li>
        {{/if}}
      </ul>
      <ul id="nav-mobile" class="side-nav">
        {{#if user}}
          <li><a href="/">Dashboard</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/users/logout">Logout</a></li>
        {{else}}
          <li><a href="/users/login">Login</a></li>
          <li><a href="/users/register">Register</a></li>
        {{/if}}
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
  </nav>
    <div class="container">
      {{#if success_msg}}
      <div class="card-panel z-depth-1">
        <span class = "new badge green pulse" data-badge-caption="Success"></span>
        {{success_msg}}
      </div>
      {{/if}}
      {{#if error_msg}}
      <div class="card-panel z-depth-1">
        <span class = "new badge red pulse" data-badge-caption="Error"></span>      
        {{error_msg}}
      </div>
      {{/if}}
      {{#if error}}
      <div class="card-panel z-depth-1">
        <span class = "new badge red pulse" data-badge-caption="Error"></span>      
        {{error}}
      </div>
      {{/if}}        
    </div>
    {{{ body }}}
